@using Corlate.Feature.PageContent.Models
@using Sitecore.Mvc
@model TestimonialsSource
@{
    Layout = null;
}

@if (Model != null)
{
    <!--=========== BEGIN TESTIMONIAL SECTION ================-->
    <section id="studentsTestimonial">
        <div class="container">            
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="title_area">
                        <h2 class="title_two">@Html.Sitecore().Field(Model.TitleID, Model.InnerItem)</h2>
                        <span></span>
                    </div>
                </div>
            </div>
           
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="studentsTestimonial_content">
                        <div class="row">
                           @if (Model.Testimonials != null && Model.Testimonials.Count > 0)
                           {
                               foreach (UserTestimonial testimonial in Model.Testimonials)
                               {
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                    <div class="single_stsTestimonial wow fadeInUp">
                                        <div class="stsTestimonial_msgbox">
                                            @Html.Sitecore().Field(testimonial.TestimonialID, testimonial.InnerItem)
                                        </div>
                                        @Html.Sitecore().Field(testimonial.ImageID, testimonial.InnerItem, new { @class = "stsTesti_img" })
                                        
                                        <div class="stsTestimonial_content">
                                            <h3>@Html.Sitecore().Field(testimonial.NameID, testimonial.InnerItem)</h3>
                                            <p>@Html.Sitecore().Field(testimonial.DesignationID, testimonial.InnerItem)</p>
                                        </div>
                                    </div>
                                </div>
                               }
                           }                           
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </section>
    <!--=========== END TESTIMONIAL SECTION ================-->
}
else
{
    <span></span>
}
