@using Corlate.Feature.PageContent.Models
@using Sitecore.Mvc
@model FacetsSource
@{
    Layout = null;
}

@if (Model != null)
{
    <section id="whyUs">       
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="whyus_top">
                    <div class="container">                       
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="title_area">
                                    <h2 class="title_two">@Html.Sitecore().Field(Model.TitleID, Model.InnerItem)</h2>
                                    <span></span>
                                </div>
                            </div>
                        </div>                       
                        <div class="row">
                            @if (Model.Facets != null && Model.Facets.Count > 0)
                            {
                                foreach (Facet facet in Model.Facets)
                                {
                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                        <div class="single_whyus_top wow fadeInUp">
                                            <div class="whyus_icon">
                                                <span class="@facet.ImageCSSClass"></span>
                                            </div>
                                            <h3>@Html.Sitecore().Field(facet.TitleID, facet.InnerItem)</h3>
                                            @Html.Sitecore().Field(facet.DescriptionID, facet.InnerItem)
                                        </div>
                                    </div>
                                }
                            }                          
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <span></span>
}
