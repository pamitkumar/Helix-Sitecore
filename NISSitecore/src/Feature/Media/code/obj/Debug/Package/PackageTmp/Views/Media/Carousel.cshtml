
@model NISSitecore.Feature.Media.ViewModels.CarouselViewModel
 

@if (Model != null)
{
<div class="box">
    <div class="col-lg-12 text-center">
        <div id="carousel-example-generic" class="carousel slide">
            <!-- Indicators -->
            <ol class="carousel-indicators hidden-xs">
                @if (Model.Slides != null)
                {
                for (int i = 0; i < Model.Slides.Count(); i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                    }
                }
                }
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                @{ 
                    var j = 1;
                    foreach(var slideImage in Model.Slides)
                    {
                        <div class="item @(j == 1 ? " active" : "")">
                            <img class="img-responsive img-full" src="@slideImage.Image.Src"/>
                            <div class="carousel-caption">
                                <h3>@slideImage.Title</h3>
                                <span>@slideImage.Caption</span>
                            </div>
                        </div>
                        j++;
                    }
                }
                
            </div>
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </div>
        <h2 class="brand-before">
            <small>@Model.Intro</small>
        </h2>
        <h1 class="brand-name">@Model.CarouselTitle</h1>
        <hr class="tagline-divider">
        <h2>
            <small>
                @Model.AdditionalText
            </small>
        </h2>
    </div>
</div>
}