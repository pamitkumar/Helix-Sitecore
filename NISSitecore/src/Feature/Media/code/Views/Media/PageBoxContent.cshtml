@model  NISSitecore.Feature.Media.Models.IPageModel
@using Glass.Mapper.Sc.Web.Mvc
<div class="box">
    <div class="col-lg-12">

        <hr>
        <h2 class="intro-text text-center">
            @Html.Glass().Editable(x => x.Title)
           
        </h2>
        <hr>
        @if (Model.Image != null)
        {
            <img src="@Model.Image.Src" />
        }
        <hr class="visible-xs">
       @Html.Glass().Editable(x=>x.Content)
    </div>
</div>