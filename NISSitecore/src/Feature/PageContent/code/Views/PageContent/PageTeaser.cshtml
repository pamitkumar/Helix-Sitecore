@using NISSitecore.Feature.PageContent
@using NISSitecore.Foundation.SitecoreExtensions.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
<div class="thumbnail">
    <a href="@Model.Item.Url()">
        @Html.Sitecore().ImageField(Constants.HasPageContent.Fields.Image, Model.Item, mw: 500, cssClass: "img-responsive")        
    </a>
    <div class="caption">
        <h3 class="teaser-heading">
            @Html.Sitecore().Field(Constants.HasPageContent.Fields.Title, Model.Item)
        </h3>
        <p>
            @Html.Sitecore().Field(Constants.HasPageContent.Fields.Summary, Model.Item)
        </p>
        <a href="@Model.Item.Url()" class="btn btn-default">
           Read more
        </a>
    </div>
</div>